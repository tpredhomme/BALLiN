.card.card-sp
  .card-block 
    .card-title= "S'inscrire"
    .card-subtitle= "C'est ici que ta carriere commence"

= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!

  .card.card-sp
    .card-block
      .row.mb-0
        .col-12
          .form-group
            = f.label "Nom de compte"
            = f.text_field :email, autofocus: true, placeholder: "Pseudo", class: 'form-control', required: true

        .col-12
          .form-group
            = f.label 'Mot de passe'
            = f.password_field :password, autocomplete: "off", placeholder: "Mot de passe", class: 'form-control', required: true
            %small.form-text.text-muted= "6 caractères minimum"

        .col-12
          .form-group
            = f.label 'Mdp confirmation'
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmez mot de passe", class: 'form-control', required: true

  .card.card-sp
    .card-block    
      .row.mb-0
        .col-12
          .form-group
            = f.label 'Nom de Famille'
            = f.text_field :first_name, class: 'form-control', required: true
          
        .col-12
          .form-group
            = f.label 'Prénom'
            = f.text_field :last_name, class: 'form-control', required: true

        .col-12
          .form-group
            = f.label 'Date de naissance'
            = f.date_field :birthday, class: 'form-control', required: true
        
        .col-12
          .form-group
            = f.label 'Taille'
            = f.text_field :height, class: 'form-control', required: true
            %small.form-text.text-muted= "(en cm)"
      
  .card.card-sp
    .card-block
      .row.mb-0
        .col-12
          .form-group
            = f.label :position
            = f.collection_select(:position_id, Position.all, :id, :name, {}, { class: 'form-control', required: true })

        .col-12
          .form-group
            = f.label "Numero de maillot"
            = f.text_field :number, class: 'form-control', required: true

  .card.card-sp
    .card-block
      .row.mb-0
        .col-12
          .form-group
            = fa_icon 'snapchat', class: 'mr-1'
            = f.label "Snapchat"
            = f.text_field :snapchat, class: 'form-control'

        .col-12
          .form-group
            = fa_icon 'instagram', class: 'mr-1'
            = f.label "Instagram"
            = f.text_field :instagram, class: 'form-control'

  .card
    .card-block
      .actions
        = f.submit "S'inscrire", class: "btn btn-primary btn-block"

        = render "devise/shared/links"
