.card.card-sp
  .card-block
    
    .card-title= "Complete ton profil"
    .card-subtitle= "Pour te rendre plus visible aux yeux des recruteurs"

= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!

  .card.card-sp
    .card-block
      
      .row.mb-0
        
        .col-12
          .form-group
            = f.label "Meilleur pied"
            = f.text_field :best_foot, class: 'form-control'
        
        .col-12
          .form-group
            = f.label "Meilleur coté"
            = f.text_field :best_side, class: 'form-control'

        .col-12
          .form-group
            = f.label "Jongle pied droit"
            = f.text_field :right_foot_juggles, class: 'form-control'

        .col-12
          .form-group
            = f.label "Jongle pied gauche"
            = f.text_field :left_foot_juggles, class: 'form-control'

        .col-12
          .form-group
            = f.label "Jongle de la tête"
            = f.text_field :head_juggles, class: 'form-control'
          
        .col-12
          .form-group
            = f.label "Endurance"
            = f.text_field :stamina, class: 'form-control'

        .col-12
          .form-group
            = f.label "Vitesse"
            = f.text_field :speed, class: 'form-control'

        .col-12
          .form-group
            = f.label "Détente"
            = f.text_field :jump, class: 'form-control'

    .actions
      = f.submit "Mettre à jour", class: "btn btn-primary btn-block mb-4"
