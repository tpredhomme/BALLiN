.card.card-sp
    .card-block
        .card-title= "Divisions"

.card.card-sp
    .card-block
        = form_for(division) do |f|
          
            .form-group
                = f.label :name
                = f.text_field :name, autofocus: true, class: 'form-control'

            .actions
                = f.submit class: 'btn btn-primary'
