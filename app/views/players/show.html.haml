.card.card-sp.pb-0
	.card-block.pb-0
		.row
			.col
				.card-title= @player.full_name
				.card-subtitle= @player.position.name.upcase
				.card-text= "#{@player.age} ans. #{@player.height} cm."
				
				.player-team.mt-3
					= fa_icon 'users'
					= link_to @player.club.name, @player.club
					= ", "
					= link_to @player.team.name, @player.team


		.row.mb-0
			.col
				%ul.nav
					%li.nav-item
						= link_to 'Attributes', '?n=attributes', class: "nav-link #{'active' if params[:n] == 'attributes' || params[:n].nil?}"

					%li.nav-item
						= link_to 'Calendrier', '?n=calendar', class: "nav-link #{'active' if params[:n] == 'calendar'}"

.card
	.card-block
		- if params[:n] == 'calendar'
			= render 'calendar'

		- else
			= render 'attributes'
