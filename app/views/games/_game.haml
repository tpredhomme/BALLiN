- team_dom = game.teams.first
- team_ext = game.teams.second

.mb-3
	%small.pl-1
		= fa_icon 'clock-o'
		= game.datetime.try(:asctime) || "N/A"

	- if cplayer.game.include? game
		= link_to game do
			.row.panel-gray
				.col
					%div= team_dom.club.name
					.small= team_dom.name

				.col.text-right
					%div= team_ext.club.name
					.small= team_ext.name

	- else
		= link_to game do
			.row.panel-white
				.col
					%div= team_dom.club.name
					.small= team_dom.name

				.col.text-right
					%div= team_ext.club.name
					.small= team_ext.name