.card.card-sp
    .card-block
        .card-title= "Game"

.card.card-sp
    .card-block
        = form_for(@game) do |f|
            .form-group
                = f.label :datetime
                = f.datetime_field(:datetime, { class: 'form-control required', required: true })

            .form-group
                = f.label "Equipes"
                = f.select(:teams, Team.order(id: :asc).collect {|t| ["##{t.id} - #{t.name} - #{t.division.name}", t.id]}, {}, { class: 'form-control', multiple: true, style: 'height: 400px;' })

            .actions
                = f.submit class: 'btn btn-primary'
