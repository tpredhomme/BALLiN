.card.card-sp.pb-0
  .card-block.pb-0
    .row.mb-0
      .col.text-center
        .card-title= 'Leagues'
        .card-subtitle= "#{@leagues.count} leagues."
    .row
      = link_to 'New League', new_league_path, class: 'btn btn-primary'

.card
  .card-block
    .row

      %table.w-100
        %tbody
          - @leagues.each do |league|
            %tr
              %td= league.name
              
              %td= link_to fa_icon('edit'), edit_league_path(league)
              %td= link_to fa_icon('ban' ), league, method: :delete, data: { confirm: 'Are you sure?' }
