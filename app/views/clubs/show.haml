.card.card-sp.pb-0
	.card-block.pb-0
		.row
			.col.text-center
				.card-title= @club.name
				.card-subtitle= @club.adress
				.card-text= @club.fields

		.row.mb-0
			.col
				%ul.nav.justify-content-center
					%li.nav-item
						= link_to 'Equipes', '', class: 'nav-link active'

.card
	.card-block
		.row 
			.col
				- @club.teams.each do |team|
					= link_to team do
						.panel-gray
							= "#{team.category.name} - #{team.level.name} - #{team.name}".upcase
